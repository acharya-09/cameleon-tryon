{
  "functions": {
    "api/generate.js": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/legacy.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "buildCommand": "echo 'Static files ready'",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/legacy",
      "destination": "/legacy.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}